<Page
    x:Class="MapApp.Views.MapPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:maps="using:Windows.UI.Xaml.Controls.Maps"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary >
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#536edb"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#536edb"/>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#536edb"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#536edb"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
            <Flyout
                x:Name="addMapElementFlyout"
                x:Key="AddMapElementFlyout"
                Placement="Bottom"
                Closing="AddPinFlyout_Closing" >
                <StackPanel Width="300">
                    <TextBlock
                        x:Name="addFlyoutTitleTextBox"
                        Height="30"
                        Text="Add a pin" />
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   HorizontalAlignment="Right"
                                   Margin="0,5,5,0" Text="Name"/>
                        <TextBox x:Name="addMapElementFlyoutTextBox"
                                 Grid.Column="1" />
                        <Button x:Name="addMapElementFlyoutButton"
                                Grid.Column="2"
                                HorizontalAlignment="Center"
                                Content="Add" />
                    </Grid>
                </StackPanel>
            </Flyout>
            <Flyout
                x:Name="editMapElementFlyout"
                x:Key="EditMapElementFlyout"
                Placement="Bottom"
                Closed="EditMapElementFlyout_Closed">
                <StackPanel Width="400">
                    <TextBlock Height="30" Text="Edit a MapElement" />
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" HorizontalAlignment="Right" Margin="0,5,5,0" Text="Name"/>
                        <TextBox x:Name="editMapElementFlyoutTextBox"
                                 KeyDown="EditMapElementFlyoutTextBox_KeyDown"
                                 Grid.Column="1" />
                        <Button Grid.Column="2"
                                HorizontalAlignment="Center"
                                Content="Save"
                                Click="EditMapElementSaveFlyoutButton_Click" />
                        <Button Grid.Column="3"
                                HorizontalAlignment="Center"
                                Content="Delete"
                                Click="EditMapElementDeleteFlyoutButton_Click" />
                    </Grid>
                </StackPanel>
            </Flyout>

        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <maps:MapControl
            x:Name="mapControl"
            ZoomLevel="{x:Bind ZoomLevel, Mode=OneWay}"
            Center="{x:Bind Center, Mode=OneWay}"
            MapTapped="MapControl_MapTapped"
            MapElementClick="MapControl_MapElementClick" >
        </maps:MapControl>
        <Grid  VerticalAlignment="Stretch" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="5*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Button
                    x:Name="addPolylineButton"
                    Content="Add polyline"
                    HorizontalAlignment="Center"
                    Style="{StaticResource MapButtonStyle}"
                    Click="OpenAddPolylineFlyout"
                    Visibility="Collapsed">
                </Button>
                <Button
                    x:Name="addPolygonButton"
                    Content="Add polygon"
                    HorizontalAlignment="Center"
                    Style="{StaticResource MapButtonStyle}"
                    Click="OpenAddPolygonFlyout"
                    Visibility="Collapsed"/>
                <Button
                    x:Name="addPinButton"
                    Content="Add pin"
                    HorizontalAlignment="Center"
                    Style="{StaticResource MapButtonStyle}"
                    Click="OpenAddPinFlyout"
                    Visibility="Collapsed"/>
            </StackPanel>
            <Grid x:Name="flyoutGrid" Grid.Row="1">
                
            </Grid>
        </Grid>
    </Grid>
</Page>
